---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<img
  src=`https://api.dicebear.com/7.x/identicon/svg?seed=${title}`
  alt="avatar"
/>

<style>
  img {
    width: clamp(0.5em, 1vw, 1em);
    height: auto;
    border-radius: 1%;
    padding: 0.5em;
    display: flex;
  }
</style>
