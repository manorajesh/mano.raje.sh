---
import { getEntryBySlug } from "astro:content";
import BPDetailLayout from "../../layouts/BPDetailLayout.astro";
const { slug } = Astro.params;

if (!slug) {
  Astro.redirect("/404");
}
const post = await getEntryBySlug("bp-posts", slug || "");
const { Content } = (await post?.render()) || {};
---

<BPDetailLayout {...post?.data}>
  <Content />
</BPDetailLayout>
