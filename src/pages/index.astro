import Card from '../components/Card.astro';
import { Image } from 'astro:assets';
import mano0 from '../images/mano0.png';
import mano1 from '../images/mano1.png';
import mano2 from '../images/mano2.png';
import mano3 from '../images/mano3.png';
import mano4 from '../images/mano4(1).png';
