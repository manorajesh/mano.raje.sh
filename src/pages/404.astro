---
import Default from "../layouts/Default.astro";
import BackButton from "../components/BackButton.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="stylesheet" href="https://use.typekit.net/yoj1mzf.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Not Found</title>
  </head>
  <body>
    <main>
      <div class="container">
        <h1 class="error">404</h1>
        <img
          src="/images/oppie.jpg"
          decoding="async"
          loading="lazy"
          alt="oppenheimer"
        />
      </div>
      <h1 class="title text-gradient">
        Now I am become Error, the destroyer of pages.
      </h1>
      <BackButton title="back to safety" href="/" />
    </main>
  </body>
</html>

<style>
  body {
    background-color: #000;
    font-size: 1.2rem;
    margin: 0;
    padding: 0;
  }

  img {
    width: 100rem;
    max-width: 100vw;
    margin-bottom: 1rem;
  }

  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .title {
    font-family: "futura-pt", serif;
    font-size: 1.2rem;
    margin: 0;
    margin-top: 1rem;
    margin-bottom: 1rem;
    padding: 10px;
    text-align: center;
    font-weight: 600;
  }

  .error {
    margin: 0;
    margin-bottom: 1rem;
    padding: 10px;
    text-align: center;
    font: clamp(20px, 50vw, 50rem) "futura-pt";
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
    filter: opacity(0.1);
  }

  .container {
    position: relative;
    text-align: center;
    color: white;
  }
</style>
